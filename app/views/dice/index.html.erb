<% if @name %>
<h1>Roll the dice, <% @name %> </h1>
<p>
  <img src="/images/dice/<%= @die1 %>.svg">
  <img src="/images/dice/<%= @die2 %>.svg">
</p>
<p>
  The total is <%= @total %>
</p>
<p>
  <a href="/dice">Roll Again</a>
</p>
<% else %>
<h1> Whats your name?<h1>
<form action="/dice">
  <input type="text" name="name">
  <button> Let's play </button>
</form>
<% end %>